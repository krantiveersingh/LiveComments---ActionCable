<div class="container">
	<h3>Posts List</h3>
</div>

<div class="row container">
	<ul class="blogs_list">
		<% @posts.each do |post| %>
		
			<div class="card-panel hoverable"> 
				 <div class="row">
		      <div class="col s10">
		      	<%= post.title %>		
		      </div>
		      <div class="col s2">
		      	<li><%= link_to "Show Details", post_path(post), class: 'waves-effect blue darken-3 btn' %></li>
		      </div>
		    </div>
			</div>

		<% end %>
	</ul>
</div>

<script type="text/javascript">
	$('#input_field').on('keypress', function(e) {
		if (e.keyCode == 13){
			M.toast({ html: 'Congrats! new blog posted', classes: 'rounded' })
		}
	})
</script>