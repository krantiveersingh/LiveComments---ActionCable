<div class="row" style="margin: 33px;">
  <div class="col s6 offset-s2"><span class="flow-text">Create New Post</span></div>
</div>

 <%= form_for @post do |form| %>
  <div class="row" style="margin-top: 95px;">
    <div class="col m3"></div>
    <div class="col s12 m5" style="margin-left: 47px;">
      <div class="card light-blue lighten-5">
        <div class="card-content white-text">
          <div class="field">
            <h5 style="color: black">Title</h5>
            <%= form.text_area :title, style: 'height: 12rem;' %>
          </div>
        </div>
        <div class="card-action">
        	<div class="col m10"></div>
          <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
        </div>
      </div>
    </div>
  </div>
<% end %>

<style type="text/css">
	input,
textarea {
	display: block;
	width: 100%;
	border: 0;
	padding: 10px 5px;
  background: white no-repeat;
</style>